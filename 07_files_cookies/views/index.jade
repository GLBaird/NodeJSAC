extends layout

block content
    h1 File uploads and cookies
    p Please choose a file to upload:
    form#uploader
        p
            input#file(name="file1", type="file", title="Choose a file to upload")
        -var name = preferredName
        if typeof name == "undefined"
            -name = ""
        p
            input#rename(
                type="text",
                title="Reanme file on upload",
                placeholder="Rename file",
                value="#{name}",
                style={
                    width:"20em",
                    padding: "0.3em 1em",
                    fontSize: "1em"
                }
            )
        p(style="border-top:1px solid #444; padding-top: 1em")
            input(type="reset" value="clear file")
            input(type="submit" value="send file")

    p#info(style="margin-top:2em")

    div#preloader

    // View uploaded files

    p
        button#refresh Refresh uploaded files
    p Files uploaded:
    ul#fileList

    // upload script
    script(src="/javascripts/uploader.js", type="text/javascript")


